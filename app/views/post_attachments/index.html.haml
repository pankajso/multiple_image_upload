%p#notice= notice
%h1 Listing Post Attachments
%table
  %thead
    %tr
      %th Post
      %th Photo
      %th{:colspan => "3"}
  %tbody
    - @post_attachments.each do |post_attachment|
      %tr
        %td= post_attachment.post_id
        %td= post_attachment.photo
        %td= link_to 'Show', post_attachment
        %td= link_to 'Edit', edit_post_attachment_path(post_attachment)
        %td= link_to 'Destroy', post_attachment, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Post attachment', new_post_attachment_path
